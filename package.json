{
  "name": "@youcruit/lits",
  "version": "1.0.62",
  "description": "A lisp implementation in Typescript",
  "author": "Albert Mojir",
  "license": "MIT",
  "homepage": "https://youcruit.github.io/lits",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YouCruit/lits.git"
  },
  "keywords": [
    "Lits",
    "Lisp",
    "Functional",
    "Pure",
    "Typescript",
    "Web",
    "Compiler",
    "Clojure"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "iife": "dist/lits.iife.js",
  "bin": {
    "lits": "cli/index.cjs"
  },
  "files": [
    "cli/**/*",
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "rm -rf dist build && rollup -c && npm run build-playground",
    "test": "vitest",
    "compile": "tsc -p ./tsconfig.compile.json --noEmit",
    "lits": "node ./cli/index.cjs",
    "build-playground": "node ./build/buildPlayground.js",
    "playground": "open-cli ./docs/index.html",
    "open-lcov": "open-cli ./coverage/lcov-report/index.html"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.16.1",
    "@rollup/plugin-json": "6.1.0",
    "open-cli": "7.2.0",
    "rollup": "3.28.1",
    "rollup-plugin-typescript2": "0.35.0",
    "tslib": "2.6.2",
    "typescript": "5.1.6",
    "vitest": "1.6.0"
  }
}
